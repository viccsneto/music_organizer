    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args":[
                "--source_path", "/home/user/Desktop/Music",
                "--destination_path", "/tmp/organized/",
                "--organizing_pattern", "{genre}/{decade}/{bitrateclass}/",
                "--desired_bitrate", "300",
            ]
        }
    ]
}